<Window x:Class="ProyectotTUSBOLETOS.Vistas.Gerente"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectotTUSBOLETOS.Vistas"
        mc:Ignorable="d"
        Title="Gerente" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="\Img\fondo.jpg" AlignmentY="Top" AlignmentX="Center"/>
        </Grid.Background>
        <Label x:Name="lblBienvenida" Content="Bienvenido Gerente" HorizontalAlignment="Left" Margin="64,12,0,0" VerticalAlignment="Top" FontSize="72" FontFamily="Segoe UI Variable Text Semibold"/>
        <Button x:Name="btnAddUSer" Content="Añadir Usuarios" HorizontalAlignment="Left" Margin="64,203,0,0" VerticalAlignment="Top" Click="btnAddUSer_Click" Height="57" Width="138" FontSize="18" FontWeight="Bold" Background="#FF91AAB2" BorderBrush="#FF121212"/>
        <Button x:Name="btnAddEventos" Content="Añadir Eventos" HorizontalAlignment="Center" Margin="0,203,0,0" VerticalAlignment="Top" Height="57" Width="140" FontSize="18" FontWeight="Bold" Click="btnAddEventos_Click" Background="#FFA3B7B4" BorderBrush="#FF131313"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="998,292,0,0" VerticalAlignment="Top" Width="0"/>
        <Button x:Name="btnVentas" Content="Ventas" HorizontalAlignment="Left" Margin="619,203,0,0" VerticalAlignment="Top" Height="57" Width="99" FontSize="18" FontWeight="Bold" Click="btnVentas_Click" Background="#FFB0C7C5" BorderBrush="#FF1A1A1A"/>

    </Grid>
</Window>
